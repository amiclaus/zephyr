/dts-v1/;

#include <adi/max32/max32690.dtsi>
#include <adi/max32/max32690-pinctrl.dtsi>
#include <zephyr/dt-bindings/gpio/adi-max32-gpio.h>

/ {
	model = "Analog Devices MAX32690EVKIT";
	compatible = "adi,max32690evkit";

	chosen {
		zephyr,console = &uart2;
		zephyr,shell-uart = &uart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
			label = "LED0";
		};
		green_led: led_1 {
			gpios = <&gpio2 12 GPIO_ACTIVE_LOW>;
			label = "LED1";
		};
	};

	buttons {
		compatible = "gpio-keys";
		pb0: pb0 {
			/* SW2 on EVKIT connects to GPIO4 which does not support interrupts,
			 * so advised to fit jumper on JH5 to connect SW2 (P4.0) to P2.29
			 */
			gpios = <&gpio2 29 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "SW2";
		};
	};

	aliases {
		led0 = &red_led;
		led1 = &green_led;
		sw0 = &pb0;
		rtc = &rtc;
		watchdog0 = &wdt0;
	 };
};

&clk_ipo {
	status = "okay";
};

/*
 * ERTCO requires for RTC
 */
&clk_ertco {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&gpio2 {
	status = "okay";
};

&gpio3 {
	status = "okay";
};

&uart2 {
	pinctrl-0 = <&uart2a_tx_p1_10 &uart2a_rx_p1_9>;
	pinctrl-names = "default";
	current-speed = <115200>;
	data-bits = <8>;
	parity = "none";
	status = "okay";
};

&uart1 {
	pinctrl-0 = <&uart1a_tx_p2_16 &uart1a_rx_p2_14>;
	pinctrl-names = "default";
	current-speed = <115200>;
	data-bits = <8>;
	parity = "none";
	status = "okay";
};

&i2c0 {
	pinctrl-0 = <&i2c0a_scl_p2_8 &i2c0a_sda_p2_7>;
	pinctrl-names = "default";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
};

&i2c2 {
	pinctrl-0 = <&i2c2c_scl_p1_8 &i2c2c_sda_p1_7>;
	pinctrl-names = "default";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
};

&spi0b_ss1_p2_26 {
	power-source = <MAX32_VSEL_VDDIOH>;
};
&spi0b_miso_p2_27 {
	power-source = <MAX32_VSEL_VDDIOH>;
};
&spi0b_mosi_p2_28 {
	power-source = <MAX32_VSEL_VDDIOH>;
};
&spi0b_ss1_p2_26 {
	power-source = <MAX32_VSEL_VDDIOH>;
};
&spi0b_sck_p2_29 {
	power-source = <MAX32_VSEL_VDDIOH>;
};

&spi0 {
	pinctrl-0 = <&spi0b_ss1_p2_26 &spi0b_miso_p2_27
				&spi0b_mosi_p2_28 &spi0b_sck_p2_29>;
	pinctrl-names = "default";
	status = "okay";
	adin1110: adin1110@1 {
		compatible = "adi,adin1110";
		reg = <0x1>;
		spi-max-frequency = <2000000>;
		int-gpios   = <&gpio0 8 (GPIO_PULL_UP | GPIO_ACTIVE_LOW | MAX32_GPIO_VSEL_VDDIOH)>;
		reset-gpios = <&gpio0 9 (GPIO_ACTIVE_LOW | MAX32_GPIO_VSEL_VDDIOH)>;
		port1 {
			local-mac-address = [ CA 2F B7 10 23 63 ];
		};
		mdio: mdio {
			compatible = "adi,adin2111-mdio";
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			ethernet-phy@1 {
				reg = <0x1>;
				compatible = "adi,adin2111-phy";
			};
		};
	};
};

&spi1 {
	pinctrl-0 = <&spi1a_ss0_p1_23 &spi1a_miso_p1_28
				&spi1a_mosi_p1_29 &spi1a_sck_p1_26>;
};

&spi3 {
	pinctrl-0 = <&spi3a_ss0_p0_19 &spi3a_miso_p0_20
				&spi3a_mosi_p0_21 &spi3a_sck_p0_16>;
};

&dma0 {
	status = "okay";
};

&rtc {
	status = "okay";
	alarms-count = <1>;
};

&wdt0 {
	status = "okay";
};

&trng {
	status = "disabled";
};

&adc {
	status = "okay";
	pinctrl-0 = <&ain0_p3_0 &ain1_p3_1 &ain2_p3_2>;
	pinctrl-names = "default";
	#address-cells = <1>;
	#size-cells = <0>;
};
